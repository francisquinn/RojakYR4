<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.tactalk.recording.RecordingPageViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202C74"
    tools:context=".recording.RecordingPageFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="133dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:text="@string/TeamB"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Chronometer
        android:id="@+id/chronometertest2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/endHalf"
        android:layout_width="114dp"
        android:layout_height="64dp"
        android:layout_marginEnd="52dp"
        android:text="@string/EndHalf"
        android:textColor="#FFFFFF"
        app:backgroundTint="#000200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.776" />

    <Button
        android:id="@+id/pause"
        android:layout_width="114dp"
        android:layout_height="64dp"
        android:text="@string/Pause"
        app:backgroundTint="#FF0505"
        app:layout_constraintBaseline_toBaselineOf="@+id/endHalf"
        app:layout_constraintEnd_toStartOf="@+id/endHalf"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/firsthalf"
        android:layout_width="143dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/FirstHalf"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="135dp"
        android:layout_height="43dp"
        android:layout_marginTop="68dp"
        android:text="@string/TeamA"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chronometertest2" />

    <TextView
        android:id="@+id/scoreA"
        android:layout_width="36dp"
        android:layout_height="43dp"
        android:layout_marginTop="68dp"
        android:text="@{viewModel.property.result.teamGoal}"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/chronometertest2" />

    <TextView
        android:id="@+id/pointA"
        android:layout_width="36dp"
        android:layout_height="43dp"
        android:layout_marginTop="68dp"
        android:text="@{viewModel.property.result.TeamPoints}"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/scoreA"
        app:layout_constraintTop_toBottomOf="@+id/chronometertest2" />

    <TextView
        android:id="@+id/pointB"
        android:layout_width="36dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:text="@{viewModel.property.result.oppTeamPoints}"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/scoreA"
        app:layout_constraintTop_toBottomOf="@+id/pointA" />

    <TextView
        android:id="@+id/scoreB1"
        android:layout_width="36dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:text="@{viewModel.property.result.oppTeamGoal}"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/scoreA" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>