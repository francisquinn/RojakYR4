
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.tactalk.statistics.StatisticViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.tactalk.StatsFragment">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:text="STATISTICS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homepoints"
            android:layout_width="23dp"
            android:layout_height="27dp"
            android:layout_marginTop="28dp"
            android:text="@{viewModel.property.result.TeamPoints}"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.713"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/oppoints"
            android:layout_width="23dp"
            android:layout_height="27dp"
            android:layout_marginTop="56dp"
            android:text="@{viewModel.property.result.oppTeamPoints}"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.713"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/homegoals"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginTop="28dp"
            android:text="@{viewModel.property.result.teamGoal}"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.602"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/opgoals"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginTop="56dp"
            android:text="@{viewModel.property.result.oppTeamGoal}"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.602"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/shots2"
            android:layout_width="29dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.property.result.teamShots}"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.767"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/op2" />

        <TextView
            android:id="@+id/opshots2"
            android:layout_width="29dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.property.result.oppTeamShots}"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.767"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/op2" />

        <TextView
            android:id="@+id/opkickout2"
            android:layout_width="29dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.property.result.teamKickouts}"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.769"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shots2" />

        <TextView
            android:id="@+id/kickout2"
            android:layout_width="29dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.property.result.oppTeamTurnover}"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.769"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shots2" />

        <TextView
            android:id="@+id/wides2"
            android:layout_width="29dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.property.result.teamWides}"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.769"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kickout2" />

        <TextView
            android:id="@+id/turn"
            android:layout_width="29dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.property.result.teamTurnover}"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.767"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opwides" />

        <TextView
            android:id="@+id/opturn"
            android:layout_width="29dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.property.result.oppTeamTurnover}"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.769"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opwides" />

        <TextView
            android:id="@+id/opwides"
            android:layout_width="29dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.property.result.teamWides}"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.769"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opkickout2" />

        <TextView
            android:id="@+id/shots"
            android:layout_width="148dp"
            android:layout_height="41dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="21dp"
            android:text="Shots"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintEnd_toStartOf="@+id/shots2"
            app:layout_constraintHorizontal_bias="0.445"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/op2" />

        <TextView
            android:id="@+id/kickout"
            android:layout_width="148dp"
            android:layout_height="41dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="20dp"
            android:text="Kickouts"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintEnd_toStartOf="@+id/opkickout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shots" />

        <TextView
            android:id="@+id/wides"
            android:layout_width="148dp"
            android:layout_height="41dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="20dp"
            android:text="Wides"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintEnd_toStartOf="@+id/wides2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kickout" />

        <TextView
            android:id="@+id/turnover"
            android:layout_width="148dp"
            android:layout_height="41dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="20dp"
            android:text="Turnovers"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintEnd_toStartOf="@+id/wides2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wides" />

        <Button
            android:id="@+id/record"
            android:layout_width="176dp"
            android:layout_height="66dp"
            android:layout_marginBottom="4dp"
            android:text="Record"
            app:backgroundTint="#2AC87B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/mainmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Next Half"
            android:textColor="@color/white"
            app:backgroundTint="#000200"
            app:layout_constraintBottom_toTopOf="@+id/record"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="182dp"
            android:layout_height="55dp"
            android:layout_marginBottom="4dp"
            android:text="Op Stats"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/mainmenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/hometeam"
            android:layout_width="88dp"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:text="Mayo"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/hometeam2"
            android:layout_width="111dp"
            android:layout_height="36dp"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-medium"
            android:text="MAYO"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/op2"
            android:layout_width="111dp"
            android:layout_height="36dp"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-medium"
            android:text="DUBLIN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/op"
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:layout_marginTop="56dp"
            android:text="Dublin"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="64dp"
            android:text=":"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/homepoints"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/homegoals"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="32dp"
            android:text=":"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/homepoints"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/homegoals"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Half"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
