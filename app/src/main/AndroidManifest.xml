<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tactalk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TacTalk">
        <activity
            android:name=".statistics.StatisticFragment"
            android:label="@string/title_activity_overview_fragment"
            android:theme="@style/Theme.TacTalk.NoActionBar"></activity>
        <activity
            android:name=".SetUpMatchFragment"
            android:label="@string/title_activity_set_up_match_fragment"
            android:theme="@style/Theme.TacTalk.NoActionBar" />
        <activity
            android:name=".ManageTeamFragment"
            android:label="@string/title_activity_manage_team_fragment"
            android:theme="@style/Theme.TacTalk.NoActionBar" />
        <activity
            android:name=".StatsFragment"
            android:label="@string/title_activity_stats_fragment"
            android:theme="@style/Theme.TacTalk.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginFragment" />
        <activity android:name=".activity.RegisterFragment" />
        <activity android:name=".RecordingPageFragment" />
        <activity android:name=".MainMenuFragment" />
        <activity android:name=".HomeFragment" />
    </application>

</manifest>